<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Tore.Service.ActionShell</PackageId>
    <Authors>İhsan Volkan Töre</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>A standard Action Filter Attribute for Net 6.0 web API. It intercepts requests, builds a request scope object and calls enter and leave method delegates before and after endpoint invocations respectfully.</Description>
    <Copyright>2023 İhsan Volkan Töre</Copyright>
    <PackageProjectUrl>https://github.com/IVTore/Tore.Service.ActionShell</PackageProjectUrl>
    <RepositoryUrl>https://github.com/IVTore/Tore.Service.ActionShell</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Tore Service Action Filter Attribute .Net Web Api ActionShell</PackageTags>
    <PackageReleaseNotes>This is net 7.0 release</PackageReleaseNotes>
    <Version>7.0.0</Version>
    <Nullable>enable</Nullable>
    <Title>A standard action filter attribute class for .Net web API</Title>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>C:\Users\IVT\Desktop 2\GitHub\Tore\Service\ActionShell\ActionShell.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="7.0.4" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
